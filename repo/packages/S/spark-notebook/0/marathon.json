{
  "id": "/spark-notebook",
  "cpus": 0.5,
  "mem": 4000,
  "instances": 1,
  "cmd": "cd spark* && ./bin/spark-notebook -java-home $(pwd)/jre1.7.0_76 -Dmanager.tachyon.enabled=false -Dhttp.port=8899",
  "uris": [
    "https://s3.eu-central-1.amazonaws.com/spark-notebook/tgz/spark-notebook-0.6.0-scala-2.10.4-spark-1.4.1-hadoop-2.4.0.tgz",
    "https://downloads.mesosphere.io/java/jre-7u76-linux-x64.tar.gz"
  ],
  "env": {
   "MESOS_JAVA_NATIVE_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "/",
      "gracePeriodSeconds": 5,
      "intervalSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "ports": [ 8899 ]
}

